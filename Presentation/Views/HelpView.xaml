<UserControl x:Class="PhotoBookRenamer.Presentation.Views.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PhotoBookRenamer.Presentation.ViewModels"
             xmlns:models="clr-namespace:PhotoBookRenamer.Domain"
             xmlns:utils="clr-namespace:PhotoBookRenamer.Presentation.Converters"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">
    <Grid Background="#eceff5" 
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          ClipToBounds="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/> <!-- Верхняя панель -->
            <RowDefinition Height="*"/> <!-- Основной контент -->
        </Grid.RowDefinitions>
        
        <!-- Верхняя панель -->
        <Border Grid.Row="0" 
                Background="White"
                BorderBrush="#E7E0EC"
                BorderThickness="0,0,0,1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="0" Opacity="0.08" Color="#000000"/>
            </Border.Effect>
            <Grid Margin="32,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Заголовок -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Справка и документация" 
                               FontSize="20"
                               FontWeight="600"
                               Foreground="#1C1B1F"
                               UseLayoutRounding="True"
                               SnapsToDevicePixels="True"
                               TextOptions.TextFormattingMode="Display"
                               TextOptions.TextRenderingMode="ClearType"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="Полное руководство по использованию программы" 
                               FontSize="14"
                               Foreground="#625B71"
                               Margin="0,2,0,0"
                               UseLayoutRounding="True"
                               SnapsToDevicePixels="True"
                               TextOptions.TextFormattingMode="Display"
                               TextOptions.TextRenderingMode="ClearType"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                </StackPanel>
                
                <!-- Кнопка назад -->
                <Button Grid.Column="1"
                        Command="{Binding BackCommand}"
                        Padding="16,8"
                        Height="36"
                        FontSize="14"
                        FontWeight="500"
                        Margin="0,0,8,0"
                        Cursor="Hand"
                        VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#6750A4"/>
                            <Setter Property="BorderBrush" Value="#79747E"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E7E0EC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="←" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Назад" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        
        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32"
                      PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <Grid MaxWidth="1400" 
                  HorizontalAlignment="Stretch"
                  Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/> <!-- Боковая навигация -->
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/> <!-- Основной контент -->
                </Grid.ColumnDefinitions>
                
                <!-- Боковая навигация -->
                <Border Grid.Column="0"
                        Background="White"
                        BorderBrush="#E7E0EC"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="16">
                    <StackPanel>
                        <TextBlock Text="Разделы справки" 
                                   FontSize="16"
                                   FontWeight="600"
                                   Foreground="#1C1B1F"
                                   Margin="0,0,0,16"/>
                        
                        <Button Command="{Binding NavigateToSectionCommand}"
                                CommandParameter="{x:Static models:HelpSection.Overview}"
                                Tag="{x:Static models:HelpSection.Overview}"
                                Style="{StaticResource HelpNavButtonStyle}"
                                Content="Обзор программы"
                                Margin="0,0,0,8"/>
                        
                        <Button Command="{Binding NavigateToSectionCommand}"
                                CommandParameter="{x:Static models:HelpSection.ProjectList}"
                                Tag="{x:Static models:HelpSection.ProjectList}"
                                Style="{StaticResource HelpNavButtonStyle}"
                                Content="Мои проекты"
                                Margin="0,0,0,8"/>
                        
                        <Button Command="{Binding NavigateToSectionCommand}"
                                CommandParameter="{x:Static models:HelpSection.StartScreen}"
                                Tag="{x:Static models:HelpSection.StartScreen}"
                                Style="{StaticResource HelpNavButtonStyle}"
                                Content="Выбор режима"
                                Margin="0,0,0,8"/>
                        
                        <Button Command="{Binding NavigateToSectionCommand}"
                                CommandParameter="{x:Static models:HelpSection.UniqueFolders}"
                                Tag="{x:Static models:HelpSection.UniqueFolders}"
                                Style="{StaticResource HelpNavButtonStyle}"
                                Content="Режим уникальных папок"
                                Margin="0,0,0,8"/>
                        
                        <Button Command="{Binding NavigateToSectionCommand}"
                                CommandParameter="{x:Static models:HelpSection.Combined}"
                                Tag="{x:Static models:HelpSection.Combined}"
                                Style="{StaticResource HelpNavButtonStyle}"
                                Content="Комбинированный режим"
                                Margin="0,0,0,8"/>
                        
                        <Button Command="{Binding NavigateToSectionCommand}"
                                CommandParameter="{x:Static models:HelpSection.FAQ}"
                                Tag="{x:Static models:HelpSection.FAQ}"
                                Style="{StaticResource HelpNavButtonStyle}"
                                Content="Частые вопросы (FAQ)"
                                Margin="0,0,0,8"/>
                        
                        <Button Command="{Binding NavigateToSectionCommand}"
                                CommandParameter="{x:Static models:HelpSection.Troubleshooting}"
                                Tag="{x:Static models:HelpSection.Troubleshooting}"
                                Style="{StaticResource HelpNavButtonStyle}"
                                Content="Ошибки и решения"
                                Margin="0,0,0,8"/>
                        
                        <Button Command="{Binding NavigateToSectionCommand}"
                                CommandParameter="{x:Static models:HelpSection.License}"
                                Tag="{x:Static models:HelpSection.License}"
                                Style="{StaticResource HelpNavButtonStyle}"
                                Content="Пользовательское соглашение"
                                Margin="0,0,0,8"/>
                    </StackPanel>
                </Border>
                
                <!-- Основной контент -->
                <Border Grid.Column="2"
                        Background="White"
                        BorderBrush="#E7E0EC"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="48">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  PreviewMouseWheel="InnerScrollViewer_PreviewMouseWheel">
                        <StackPanel>
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </StackPanel.Resources>
                            <!-- Обзор программы -->
                            <StackPanel Visibility="{Binding CurrentSection, Converter={StaticResource HelpSectionToVisibilityConverter}, ConverterParameter=Overview}">
                                <TextBlock Text="Введение" 
                                           FontSize="32"
                                           FontWeight="700"
                                           Foreground="#6750A4"
                                           Margin="0,0,0,24"/>
                                
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="16"
                                           Foreground="#1C1B1F"
                                           LineHeight="28"
                                           Margin="0,0,0,32">
                                    <Run Text="Fabrika BookBuilder Studio — утилита для быстрого и безопасного переименования изображений и подготовки их к пакетной загрузке в систему печати фотокниг. Программа позволяет автоматически распределять изображения по книгам, назначать общие и индивидуальные развороты, генерировать корректную нумерацию файлов и пакет для загрузки."/>
                                    <LineBreak/>
                                    <LineBreak/>
                                    <Run Text="Важно: все операции выполняются с копиями файлов — оригиналы остаются без изменений." FontWeight="600"/>
                                </TextBlock>
                                
                                <TextBlock Text="Быстрый старт (3 шага)" 
                                           FontSize="24"
                                           FontWeight="600"
                                           Foreground="#1C1B1F"
                                           Margin="0,0,0,16"/>
                                
                                <StackPanel Margin="0,0,0,32">
                                    <TextBlock Text="1. Создайте новый проект: Создать проект → введите имя (по умолчанию ставится &quot;Новый проект&quot;)" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,12"
                                               LineHeight="24"/>
                                    <TextBlock Text="2. Выберите режим работы:" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,8"
                                               LineHeight="24"/>
                                    <TextBlock Text="   • Режим уникальных папок — каждая выбранная папка превращается в одну книгу" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="20,0,0,8"
                                               LineHeight="24"/>
                                    <TextBlock Text="   • Комбинированный режим — вручную формируйте книги и назначьте общие/индивидуальные файлы" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="20,0,0,12"
                                               LineHeight="24"/>
                                    <TextBlock Text="3. После заполнения всех слотов — нажмите Экспорт и укажите папку для сохранения итогового пакета" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,12"
                                               LineHeight="24"/>
                                </StackPanel>
                                
                                <TextBlock Text="Общие понятия и правила нумерации" 
                                           FontSize="24"
                                           FontWeight="600"
                                           Foreground="#1C1B1F"
                                           Margin="0,0,0,16"/>
                                
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="16"
                                           Foreground="#1C1B1F"
                                           LineHeight="28"
                                           Margin="0,0,0,16">
                                    <Run Text="Книга — набор файлов: одна обложка (индекс 00) и набор разворотов (01, 02, ...)."/>
                                </TextBlock>
                                
                                <TextBlock Text="Формат нумерации: KK-FF.jpg" 
                                           FontSize="18"
                                           FontWeight="600"
                                           Foreground="#1C1B1F"
                                           Margin="0,0,0,12"/>
                                
                                <StackPanel Margin="0,0,0,32">
                                    <TextBlock Text="• KK — номер книги (двузначный, от 01 до 99)" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,8"
                                               LineHeight="24"/>
                                    <TextBlock Text="• FF — номер файла внутри книги (00 — обложка, 01, 02... — развороты)" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,8"
                                               LineHeight="24"/>
                                    <TextBlock Text="Пример: 05-00.jpg — обложка пятой книги; 05-03.jpg — третий разворот пятой книги" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,12"
                                               FontStyle="Italic"
                                               LineHeight="24"/>
                                    <TextBlock Text="При экспорте программа копирует файлы в одну итоговую папку с корректными именами." 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,12"
                                               LineHeight="24"/>
                                </StackPanel>
                            </StackPanel>
                                        
                            <!-- Мои проекты -->
                            <StackPanel Visibility="{Binding CurrentSection, Converter={StaticResource HelpSectionToVisibilityConverter}, ConverterParameter=ProjectList}">
                                <TextBlock Text="Работа с проектами" 
                                           FontSize="32"
                                           FontWeight="700"
                                           Foreground="#6750A4"
                                           Margin="0,0,0,24"/>
                                
                                <TextBlock Text="Создание проекта" 
                                           FontSize="24"
                                           FontWeight="600"
                                           Foreground="#1C1B1F"
                                           Margin="0,0,0,16"/>
                                
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="16"
                                           Foreground="#1C1B1F"
                                           LineHeight="28"
                                           Margin="0,0,0,16">
                                    <Run Text="Нажмите Создать проект → введите имя → проект появится в списке «Мои проекты»."/>
                                </TextBlock>
                                
                                <TextBlock Text="Открытие проекта" 
                                           FontSize="24"
                                           FontWeight="600"
                                           Foreground="#1C1B1F"
                                           Margin="0,0,0,16"/>
                                
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="16"
                                           Foreground="#1C1B1F"
                                           LineHeight="28"
                                           Margin="0,0,0,16">
                                    <Run Text="Нажмите Открыть на карточке проекта."/>
                                </TextBlock>
                                
                                <TextBlock Text="Сохранение" 
                                           FontSize="24"
                                           FontWeight="600"
                                           Foreground="#1C1B1F"
                                           Margin="0,0,0,16"/>
                                
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="16"
                                           Foreground="#1C1B1F"
                                           LineHeight="28"
                                           Margin="0,0,0,16">
                                    <Run Text="Проекты сохраняются локально в папке настроек приложения. Рекомендуется периодически нажимать Сохранить проект перед экспортом."/>
                                </TextBlock>
                                
                                <TextBlock Text="Удаление проекта" 
                                           FontSize="24"
                                           FontWeight="600"
                                           Foreground="#1C1B1F"
                                           Margin="0,0,0,16"/>
                                
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="16"
                                           Foreground="#1C1B1F"
                                           LineHeight="28"
                                           Margin="0,0,0,16">
                                    <Run Text="Нажмите Удалить → подтвердите действие."/>
                                </TextBlock>
                                
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="16"
                                           Foreground="#DC143C"
                                           FontWeight="600"
                                           LineHeight="28"
                                           Margin="0,0,0,32">
                                    <Run Text="ВНИМАНИЕ: удаление проекта не удаляет оригинальные изображения на вашем диске."/>
                                </TextBlock>
                                
                                <TextBlock Text="Статусы проектов" 
                                           FontSize="24"
                                           FontWeight="600"
                                           Foreground="#1C1B1F"
                                           Margin="0,0,0,16"/>
                                
                                <StackPanel Margin="0,0,0,32">
                                    <TextBlock Text="⚠️ Не заполнен — проект создан, но не содержит данных" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,12"
                                               LineHeight="24"/>
                                    <TextBlock Text="✏️ В работе — проект содержит данные и готов к редактированию" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,12"
                                               LineHeight="24"/>
                                    <TextBlock Text="✓ Готов к печати — проект успешно экспортирован" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,12"
                                               LineHeight="24"/>
                                </StackPanel>
                            </StackPanel>
                                        
                            <!-- Выбор режима -->
                            <StackPanel Visibility="{Binding CurrentSection, Converter={StaticResource HelpSectionToVisibilityConverter}, ConverterParameter=StartScreen}">
                                            <TextBlock Text="Выбор режима работы" 
                                                       FontSize="32"
                                                       FontWeight="700"
                                                       Foreground="#6750A4"
                                                       Margin="0,0,0,24"/>
                                            
                                            <TextBlock TextWrapping="Wrap"
                                                       FontSize="16"
                                                       Foreground="#1C1B1F"
                                                       LineHeight="28"
                                                       Margin="0,0,0,32">
                                                <Run Text="На экране выбора режима вы можете выбрать один из двух режимов работы программы в зависимости от ваших задач."/>
                                            </TextBlock>
                                            
                                            <TextBlock Text="Режим уникальных папок" 
                                                       FontSize="24"
                                                       FontWeight="600"
                                                       Foreground="#1C1B1F"
                                                       Margin="0,0,0,16"/>
                                            
                                            <TextBlock TextWrapping="Wrap"
                                                       FontSize="16"
                                                       Foreground="#1C1B1F"
                                                       LineHeight="28"
                                                       Margin="0,0,0,16">
                                                <Run Text="Идеально подходит для пакетной обработки большого количества папок. Каждая папка автоматически преобразуется в отдельную книгу. Обложка определяется автоматически по максимальному разрешению изображения."/>
                                            </TextBlock>
                                            
                                            <TextBlock Text="Когда использовать:" 
                                                       FontSize="20"
                                                       FontWeight="600"
                                                       Foreground="#1C1B1F"
                                                       Margin="0,16,0,12"/>
                                            
                                            <StackPanel Margin="0,0,0,32">
                                                <TextBlock Text="• У вас есть несколько папок с фотографиями" 
                                                           FontSize="16"
                                                           Foreground="#1C1B1F"
                                                           Margin="0,0,0,12"
                                                           LineHeight="24"/>
                                                <TextBlock Text="• Каждая папка должна стать отдельной книгой" 
                                                           FontSize="16"
                                                           Foreground="#1C1B1F"
                                                           Margin="0,0,0,12"
                                                           LineHeight="24"/>
                                                <TextBlock Text="• Все папки содержат одинаковое количество файлов" 
                                                           FontSize="16"
                                                           Foreground="#1C1B1F"
                                                           Margin="0,0,0,12"
                                                           LineHeight="24"/>
                                                <TextBlock Text="• Нужна автоматическая обработка без ручной настройки" 
                                                           FontSize="16"
                                                           Foreground="#1C1B1F"
                                                           Margin="0,0,0,12"
                                                           LineHeight="24"/>
                                            </StackPanel>
                                            
                                            <TextBlock Text="Комбинированный режим" 
                                                       FontSize="24"
                                                       FontWeight="600"
                                                       Foreground="#1C1B1F"
                                                       Margin="0,0,0,16"/>
                                            
                                            <TextBlock TextWrapping="Wrap"
                                                       FontSize="16"
                                                       Foreground="#1C1B1F"
                                                       LineHeight="28"
                                                       Margin="0,0,0,16">
                                                <Run Text="Предоставляет максимальную гибкость в создании книг. Вы можете вручную формировать структуру книг, перетаскивать файлы на слоты, назначать общие и индивидуальные развороты."/>
                                            </TextBlock>
                                            
                                            <TextBlock Text="Когда использовать:" 
                                                       FontSize="20"
                                                       FontWeight="600"
                                                       Foreground="#1C1B1F"
                                                       Margin="0,16,0,12"/>
                                            
                                            <StackPanel Margin="0,0,0,32">
                                                <TextBlock Text="• Нужен полный контроль над структурой книг" 
                                                           FontSize="16"
                                                           Foreground="#1C1B1F"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,12"
                                                           LineHeight="24"/>
                                                <TextBlock Text="• Хотите вручную распределять файлы по разворотам" 
                                                           FontSize="16"
                                                           Foreground="#1C1B1F"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,12"
                                                           LineHeight="24"/>
                                                <TextBlock Text="• Нужно применить один файл ко всем книгам" 
                                                           FontSize="16"
                                                           Foreground="#1C1B1F"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,12"
                                                           LineHeight="24"/>
                                                <TextBlock Text="• Книги имеют разное количество разворотов" 
                                                           FontSize="16"
                                                           Foreground="#1C1B1F"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,12"
                                                           LineHeight="24"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                            <!-- Режим уникальных папок -->
                            <StackPanel Visibility="{Binding CurrentSection, Converter={StaticResource HelpSectionToVisibilityConverter}, ConverterParameter=UniqueFolders}">
                                <TextBlock Text="Режим «Уникальные папки» — пошаговое использование" 
                                           FontSize="32"
                                           FontWeight="700"
                                           Foreground="#6750A4"
                                           Margin="0,0,0,24"/>
                                
                                <TextBlock Text="Когда использовать" 
                                           FontSize="24"
                                           FontWeight="600"
                                           Foreground="#1C1B1F"
                                           Margin="0,0,0,16"/>
                                
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="16"
                                           Foreground="#1C1B1F"
                                           LineHeight="28"
                                           Margin="0,0,0,32">
                                    <Run Text="У вас заранее подготовлены папки, каждая из которых содержит файлы одной книги."/>
                                </TextBlock>
                                
                                <TextBlock Text="Шаги работы" 
                                           FontSize="24"
                                           FontWeight="600"
                                           Foreground="#1C1B1F"
                                           Margin="0,0,0,16"/>
                                
                                <StackPanel Margin="0,0,0,32">
                                    <TextBlock Text="1. Нажмите &quot;Выбрать папки…&quot;" 
                                               FontSize="16"
                                               FontWeight="600"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,8"
                                               LineHeight="24"/>
                                    <TextBlock Text="2. Выберите несколько папок, содержащих только JPG/JPEG файлы" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               Margin="0,0,0,16"
                                               LineHeight="24"/>
                                    <TextBlock Text="3. Программа проверит папки:" 
                                               FontSize="16"
                                               FontWeight="600"
                                               Foreground="#1C1B1F"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8"
                                               LineHeight="24"/>
                                    <TextBlock Text="   • Все папки должны содержать одинаковое количество файлов; если это не так, появится предупреждение" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               TextWrapping="Wrap"
                                               Margin="20,0,0,8"
                                               LineHeight="24"/>
                                    <TextBlock Text="   • Если в папке есть файлы другого формата — появится ошибка" 
                                               FontSize="16"
                                               Foreground="#1C1B1F"
                                               TextWrapping="Wrap"
                                               Margin="20,0,0,16"
                                               LineHeight="24"/>
                                    <TextBlock Text="4. После успешной проверки программа создаст карточки книг:" 
                                               FontSize="16"
                                               FontWeight="600"
                                               Foreground="#1C1B1F"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8"
