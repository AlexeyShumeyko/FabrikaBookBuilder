<Window x:Class="PhotoBookRenamer.Utils.MultiFolderPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите папки с фотографиями" 
        Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Выберите папки с JPG/JPEG файлами. Используйте Ctrl+ЛКМ или Shift+ЛКМ для выбора нескольких папок." 
                   TextWrapping="Wrap" 
                   Margin="0,0,0,15" 
                   FontSize="14" 
                   Foreground="#4A4A4A"/>
        
        <ListBox Grid.Row="1" 
                 x:Name="FoldersListBox" 
                 Margin="0,0,0,15"
                 BorderBrush="#E0E0E0"
                 BorderThickness="1"
                 SelectionMode="Extended">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                               TextTrimming="CharacterEllipsis"
                               Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Выбрать папки..." 
                    Click="SelectFoldersButton_Click" 
                    Padding="20,10" 
                    Margin="0,0,10,0"
                    MinWidth="140"/>
            <Button Content="Загрузить" 
                    Click="OkButton_Click" 
                    Padding="25,10" 
                    Margin="0,0,10,0"
                    IsDefault="True"
                    MinWidth="100"
                    x:Name="OkButton"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Padding="25,10"
                    IsCancel="True"
                    MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>












