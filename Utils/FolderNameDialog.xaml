<Window x:Class="PhotoBookRenamer.Utils.FolderNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Экспорт проекта" 
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Border Background="#eceff5" 
            CornerRadius="20"
            BorderThickness="0"
            ClipToBounds="False">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.25" Color="#000000" RenderingBias="Quality"/>
        </Border.Effect>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Заголовок -->
            <TextBlock Grid.Row="0" 
                       Text="Экспорт проекта" 
                       FontSize="24"
                       FontWeight="600"
                       Foreground="#1C1B1F"
                       Margin="0,0,0,8"
                       UseLayoutRounding="True"
                       SnapsToDevicePixels="True"
                       TextOptions.TextFormattingMode="Display"
                       TextOptions.TextRenderingMode="ClearType"/>
            
            <TextBlock Grid.Row="0" 
                       Text="Выберите место для сохранения переименованных файлов" 
                       FontSize="14"
                       Foreground="#625B71"
                       Margin="0,32,0,24" 
                       TextWrapping="Wrap"
                       UseLayoutRounding="True"
                       SnapsToDevicePixels="True"
                       TextOptions.TextFormattingMode="Display"
                       TextOptions.TextRenderingMode="ClearType"/>
            
            <!-- Путь к папке -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" 
                        BorderBrush="#79747E"
                        BorderThickness="1"
                        Background="White"
                        CornerRadius="8"
                        Padding="12,0"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center">
                    <TextBox x:Name="FolderPathTextBox" 
                             IsReadOnly="True" 
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="14"
                             Foreground="#1C1B1F"
                             VerticalContentAlignment="Center"
                             Padding="0"
                             UseLayoutRounding="True"
                             SnapsToDevicePixels="True"
                             TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="ClearType"/>
                </Border>
                <Button Grid.Column="1" 
                        Content="Обзор..." 
                        Click="BrowseButton_Click" 
                        Padding="20,10"
                        MinWidth="100"
                        Height="40"
                        FontSize="14"
                        FontWeight="500"
                        Cursor="Hand"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True"
                        TextOptions.TextFormattingMode="Display"
                        TextOptions.TextRenderingMode="ClearType">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#6750A4"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="3" ShadowDepth="0" Opacity="0.12" Color="#000000"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8651F3"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.15" Color="#000000"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#5A4B8F"/>
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Имя папки -->
            <TextBlock Grid.Row="2" 
                       Text="Имя папки:" 
                       FontSize="14"
                       FontWeight="500"
                       Foreground="#1C1B1F"
                       Margin="0,0,0,8"
                       UseLayoutRounding="True"
                       SnapsToDevicePixels="True"
                       TextOptions.TextFormattingMode="Display"
                       TextOptions.TextRenderingMode="ClearType"/>
            
            <Border Grid.Row="3" 
                    BorderBrush="#79747E"
                    BorderThickness="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="12,0"
                    Margin="0,0,0,32">
                <TextBox x:Name="FolderNameTextBox" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontSize="14"
                         Foreground="#1C1B1F"
                         VerticalContentAlignment="Center"
                         Padding="0"
                         MinHeight="44"
                         UseLayoutRounding="True"
                         SnapsToDevicePixels="True"
                         TextOptions.TextFormattingMode="Display"
                         TextOptions.TextRenderingMode="ClearType">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Foreground" Value="#1C1B1F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Border>
            
            <!-- Кнопки -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0">
                <Button Content="Отмена" 
                        Click="CancelButton_Click" 
                        Padding="20,10"
                        Margin="0,0,12,0"
                        IsCancel="True"
                        MinWidth="110"
                        Height="44"
                        FontSize="14"
                        FontWeight="500"
                        Cursor="Hand"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True"
                        TextOptions.TextFormattingMode="Display"
                        TextOptions.TextRenderingMode="ClearType">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#6750A4"/>
                            <Setter Property="BorderBrush" Value="#79747E"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FEF7FF"/>
                                    <Setter Property="BorderBrush" Value="#6750A4"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#EADDFF"/>
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Сохранить" 
                        Click="OkButton_Click" 
                        Padding="20,10"
                        IsDefault="True"
                        MinWidth="110"
                        Height="44"
                        FontSize="14"
                        FontWeight="500"
                        Cursor="Hand"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True"
                        TextOptions.TextFormattingMode="Display"
                        TextOptions.TextRenderingMode="ClearType">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#6750A4"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="3" ShadowDepth="0" Opacity="0.12" Color="#000000"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8651F3"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.15" Color="#000000"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#5A4B8F"/>
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
