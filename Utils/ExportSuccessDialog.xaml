<Window x:Class="PhotoBookRenamer.Utils.ExportSuccessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Экспорт завершен" 
        Height="380" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Border Background="#eceff5" 
            CornerRadius="20"
            BorderThickness="0"
            ClipToBounds="False">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.25" Color="#000000" RenderingBias="Quality"/>
        </Border.Effect>
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Success Icon and Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,24">
                <Border Background="#10B981" 
                        CornerRadius="16" 
                        Padding="16" 
                        Margin="0,0,16,0"
                        VerticalAlignment="Center"
                        Width="64"
                        Height="64">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.2" Color="#10B981"/>
                    </Border.Effect>
                    <TextBlock Text="✓" 
                               FontSize="36" 
                               Foreground="White"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               UseLayoutRounding="True"
                               SnapsToDevicePixels="True"
                               TextOptions.TextFormattingMode="Display"
                               TextOptions.TextRenderingMode="ClearType"/>
                </Border>
                <TextBlock Text="Экспорт завершен успешно!" 
                           FontSize="24"
                           FontWeight="600"
                           Foreground="#1C1B1F"
                           VerticalAlignment="Center"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"
                           TextOptions.TextFormattingMode="Display"
                           TextOptions.TextRenderingMode="ClearType"/>
            </StackPanel>
            
            <!-- Path Info -->
            <Border Grid.Row="1" 
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Файлы сохранены в:" 
                               FontSize="14"
                               FontWeight="500"
                               Foreground="#625B71"
                               Margin="0,0,0,12"
                               UseLayoutRounding="True"
                               SnapsToDevicePixels="True"
                               TextOptions.TextFormattingMode="Display"
                               TextOptions.TextRenderingMode="ClearType"/>
                    <TextBlock x:Name="PathTextBlock" 
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="#1C1B1F"
                               TextTrimming="CharacterEllipsis"
                               UseLayoutRounding="True"
                               SnapsToDevicePixels="True"
                               TextOptions.TextFormattingMode="Display"
                               TextOptions.TextRenderingMode="ClearType"/>
                </StackPanel>
            </Border>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0">
                <Button Content="Перейти в папку" 
                        Click="GoToFolderButton_Click" 
                        Padding="20,10"
                        Margin="0,0,12,0"
                        MinWidth="140"
                        Height="44"
                        FontSize="14"
                        FontWeight="500"
                        Cursor="Hand"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True"
                        TextOptions.TextFormattingMode="Display"
                        TextOptions.TextRenderingMode="ClearType">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#6750A4"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="3" ShadowDepth="0" Opacity="0.12" Color="#000000"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8651F3"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.15" Color="#000000"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#5A4B8F"/>
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Вернуться к редактированию" 
                        Click="ContinueButton_Click" 
                        Padding="20,10"
                        IsDefault="True"
                        MinWidth="180"
                        Height="44"
                        FontSize="14"
                        FontWeight="500"
                        Cursor="Hand"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True"
                        TextOptions.TextFormattingMode="Display"
                        TextOptions.TextRenderingMode="ClearType">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#6750A4"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="3" ShadowDepth="0" Opacity="0.12" Color="#000000"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8651F3"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.15" Color="#000000"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#5A4B8F"/>
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

