<Window x:Class="PhotoBookRenamer.Utils.MultiFolderSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите папки с фотографиями" 
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Выберите папки с JPG/JPEG файлами. Все папки должны содержать одинаковое количество файлов." 
                   TextWrapping="Wrap" Margin="0,0,0,15" FontSize="14" Foreground="#4A4A4A"/>
        
        <!-- Error Message -->
        <Border Grid.Row="1" Background="#FFE5E5" 
                Padding="12" Margin="0,0,0,15"
                CornerRadius="6"
                Visibility="{Binding ElementName=ErrorTextBlock, Path=Text, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock x:Name="ErrorTextBlock" 
                       Foreground="#D32F2F" FontSize="13" 
                       TextWrapping="Wrap"/>
        </Border>
        
        <ListBox Grid.Row="2" x:Name="FoldersListBox" 
                 Margin="0,0,0,15"
                 BorderBrush="#E0E0E0"
                 BorderThickness="1"
                 SelectionMode="Extended">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Path}" 
                                   TextTrimming="CharacterEllipsis"
                                   Margin="5"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding FileCount, StringFormat='({0} файлов)'}" 
                                   Foreground="#999"
                                   FontSize="11"
                                   Margin="5,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,0,0,15">
            <Button Content="Добавить папки" 
                    Click="AddFolderButton_Click" 
                    Padding="15,8" 
                    Margin="0,0,10,0"/>
            <Button Content="Удалить выбранные" 
                    Click="RemoveFolderButton_Click" 
                    Padding="15,8"
                    x:Name="RemoveButton"
                    IsEnabled="False">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="IsEnabled" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=FoldersListBox, Path=SelectedItems.Count}" Value="0">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=FoldersListBox, Path=SelectedItems.Count}">
                                <Setter Property="IsEnabled" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        
        <TextBlock Grid.Row="4" 
                   Text="{Binding ElementName=FoldersListBox, Path=Items.Count, StringFormat='Выбрано папок: {0}'}" 
                   FontSize="12" 
                   Foreground="#666"
                   Margin="0,0,0,15"/>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Загрузить" 
                    Click="OkButton_Click" 
                    Padding="25,10" 
                    Margin="0,0,10,0"
                    IsDefault="True"
                    MinWidth="100"
                    x:Name="OkButton"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Padding="25,10"
                    IsCancel="True"
                    MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>
