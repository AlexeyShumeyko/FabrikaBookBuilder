<Window x:Class="PhotoBookRenamer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PhotoBookRenamer.Views"
        Title="Fabrika BookBuilder Studio" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#eceff5"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        ResizeMode="CanResize"
        SizeToContent="Manual"
        MinWidth="1000"
        MinHeight="600"
        Width="1400"
        Height="900"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.ClearTypeHint="Enabled"
        SizeChanged="MainWindow_SizeChanged">
    <Window.Resources>
        <Style TargetType="Window">
            <Setter Property="Background" Value="#eceff5"/>
        </Style>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="D1" Modifiers="Ctrl" Command="{Binding SwitchToUniqueFoldersCommand}"/>
        <KeyBinding Key="D2" Modifiers="Ctrl" Command="{Binding SwitchToCombinedModeCommand}"/>
    </Window.InputBindings>
    
    <!-- Основной контейнер -->
    <Border Background="#eceff5" 
            CornerRadius="0"
            BorderThickness="0"
            MouseDown="Border_MouseDown"
            ClipToBounds="True"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="0"
            Padding="0">
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Margin="0">
            <!-- Основной контент -->
            <ContentControl Content="{Binding CurrentView}"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch"
                           VerticalContentAlignment="Stretch"/>
        </Grid>
    </Border>
</Window>
